<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbrown">

    <LinearLayout
        android:id="@+id/lineartop1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lupa Password"
            android:textSize="20sp"
            android:paddingTop="160dp"
            android:fontFamily="@font/poppinssemibold"/>

        <ImageView
            android:id="@+id/imglogo1"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/logo1" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewlupapassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineartop1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Verifikasi Email"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/lightbrown"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/emaillupapassword1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="2dp"
                android:padding="8dp"
                android:drawableLeft="@drawable/personicon"
                android:hint="Email"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/lightbrown"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonkirimkode1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardviewlupapassword1"
        android:layout_marginStart="260dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="right"
        android:backgroundTint="@color/semidarkbrown">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kirim Kode"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppinssemibold"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewlupapassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonkirimkode1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Verifikasi OTP dan Password"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/lightbrown"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/konfirmasikode1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:hint="Kode OTP"
                android:fontFamily="@font/poppinsmedium"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/lockicon"/>

            <EditText
                android:id="@+id/konfirqmasikode2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:hint="New Password"
                android:fontFamily="@font/poppinsmedium"
                android:paddingLeft="12dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/lockicon"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/buttonresetpassword1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardviewlupapassword2"
        android:layout_marginStart="200dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="right"
        android:backgroundTint="@color/semidarkbrown">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="16dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppinssemibold"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/returntologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonresetpassword1"
        android:src="@drawable/return_arrow"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"/>

</RelativeLayout>