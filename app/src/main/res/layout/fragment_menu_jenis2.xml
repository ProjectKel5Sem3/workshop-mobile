<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbrown"
    android:orientation="vertical"
    tools:context=".MenuJenis2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Isi Pesanan"
        android:textStyle="bold"
        android:drawableRight="@drawable/close"
        android:drawablePadding="230dp"
        android:id="@+id/closebtn"/>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:text="Base Cake/Varian Rasa"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/brownies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brownies" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/blackforest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black Forest" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/chocodevil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choco Devil" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/bolupandan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bolu Pandan" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/bolumatcha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bolu Matcha" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/boluredvelvet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bolu Red Velvet" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/boluvanillakeju"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bolu Vanilla Keju" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/boluvanillastrawberry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bolu Vanilla Strawberry" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/bolucheesecake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bolu Cheese Cake" />

                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Keterangan Lain (opsional)"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ketiknama"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppinsmedium"
                android:hint="Ketik Pesan" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Pesan Untuk Hari Apa"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tambahtopping"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppinsmedium"
                android:hint="Ketik Pesan" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonselanjutnya"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="260dp"
            app:cardCornerRadius="5dp"
            android:layout_gravity="right"
            android:backgroundTint="@color/semidarkbrown">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selanjutnya"
                android:textSize="16dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/poppinssemibold"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>