<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightbrown"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearregister1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinssemibold"
            android:paddingTop="220dp"
            android:text="Register"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imglogo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/logo1" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewregister1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearregister1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Registrasi"
                android:textColor="@color/lightbrown"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailregistrasi1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/personicon"
                android:fontFamily="@font/poppinsmedium"
                android:hint="Email"
                android:padding="8dp"
                android:textColor="@color/lightbrown" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lightbrown" />

            <EditText
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/lockicon"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lightbrown" />

            <EditText
                android:id="@+id/passwordconfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/lockicon"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppinsmedium"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewrefister2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardviewregister1"
        android:layout_gravity="right"
        android:layout_marginStart="280dp"
        android:backgroundTint="@color/semidarkbrown"
        app:cardCornerRadius="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:fontFamily="@font/poppinssemibold"
            android:padding="10dp"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/orsignupwith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardviewrefister2"
        android:drawableLeft="@drawable/strokesignup"
        android:gravity="center"
        android:paddingLeft="32dp"
        android:paddingTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/orsignupwith"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/imgbuttongoogle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="98dp"
            android:src="@drawable/googlelogo" />

        <ImageView
            android:id="@+id/imgbuttonfacebook1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:src="@drawable/facebooklogo" />

    </LinearLayout>

</RelativeLayout>